@model AdilBooks.Models.AuthorDto

@{
    ViewData["Title"] = "Confirm Delete Author";
}

<h1>Confirm Delete</h1>

<p>Are you sure you want to delete this author?</p>

<div>
    <div>
        <label>Name</label>
        <div>@Model.Name</div>
    </div>

    <div>
        <label>Biography</label>
        <div>@Model.Bio</div>
    </div>
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.AuthorId">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
